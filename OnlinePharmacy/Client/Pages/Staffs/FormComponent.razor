@inject HttpClient _client

<EditForm Model="@staff" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Name: </label>
            <div>
                <InputText @bind-Value="@staff.Name" class="form-control" />
                <ValidationMessage For="@(() => staff.Name)" />
            </div>
        </div>

        <div class="form-group">
            <label>Type: </label>
            <div>
                <InputText @bind-Value="@staff.StaffType" class="form-control" />
                <ValidationMessage For="@(() => staff.StaffType)" />
            </div>
        </div>

        <div class="form-group">
            <label>Gender: </label>
            <div>
                <InputText @bind-Value="@staff.Gender" class="form-control" />
                <ValidationMessage For="@(() => staff.Gender)" />
            </div>
        </div>

        <div class="form-group">
            <label>Contact: </label>
            <div>
                <InputText @bind-Value="@staff.PhoneNo" class="form-control" />
                <ValidationMessage For="@(() => staff.PhoneNo)" />
            </div>
        </div>

        <div class="form-group">
            <label>Email: </label>
            <div>
                <InputText @bind-Value="@staff.Email" class="form-control" />
                <ValidationMessage For="@(() => staff.Email)" />
            </div>
        </div>

        <div class="form-group">
            <label>Date of Birth: </label>
            <div>
                <InputDate @bind-Value="@staff.DateOut" class="form-control" />
                <ValidationMessage For="@(() => staff.DateOut)" />
            </div>
        </div>

    </fieldset>

    <br />
    <br />

    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <BackToList Target="staffs" />
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Staff? staff { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}